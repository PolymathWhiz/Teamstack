<!DOCTYPE html>
<html lang="en">
  <head>
    <title>
      <%= full_title(yield(:title)) %>
    </title>

    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= render 'shared/head_additions' %>
  </head>

  <body class="<%= controller_name %> <%= controller.action_name %>">
  
    <% unless controller_name == "sessions" || controller_name == "registrations" && controller.action_name == "new" || controller_name == "passwords" %>
      <% if user_signed_in? %>
        <%= render 'shared/usernav' %>
      <% else %>

      <%= render 'shared/header' %> 
      
      <% end %> 
    
    <% end %>

    <%= yield %>
    
    <% if controller_name == "pages" || controller_name == "contacts" %>
        <div style="margin-top: 30px;">
      <%= debug(params) if Rails.env.development? %>      
    </div>
      
    <% end %>
    
    
    <% if controller_name == "pages" || controller_name == "contacts" %>
        <%= render 'shared/footer' %>
    <% end %>
    

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </body>
</html>