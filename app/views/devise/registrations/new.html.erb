<% provide(:title, "Register")%>

<style>
  body {
    background-color: #061338;
  }

	.logo {
		width: 100% \9;
	}
</style>


<div class="container" style="margin-top: -20px;">
	<div class="row">
		<div class="col-md-5 col-md-offset-4">
			<!--<h1 class="text-center auth_header"> CodeZen </h1> -->
			<a href="<%= root_path %>">
				 <%= image_tag 'logo.svg', class: "img-responsive center-block  auth_header logo", alt: "logo" %> 
			</a>
		</div>
	</div>
	<div class="row">
		<div class="col-md-5 col-md-offset-4">
		<div class="card-box">
		
				<h2 class="page-header text-center text-uppercase m-t-t"> Register </h2>

				<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
			   	
					 <%= render 'shared/error_messages', object: f.object%>

						<div class="form-group">
							<%= f.label :email %>
							<%= f.email_field :email, autofocus: true, class: "form-control" %>
						</div>
							<div class="form-group">
										<%= f.label :password %>
										<% if @minimum_password_length %>
										<em>(<%= @minimum_password_length %> characters minimum)</em>
										<% end %>
										<%= f.password_field :password, autocomplete: "off", class: "form-control" %>
							</div>
							<div class="form-group">
								<%= f.label :password_confirmation %><br />
								<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
							</div>
								<%= f.submit "Register", class: "btn btn-zen btn-block" %>

								<p class="help-block user_header" style="margin-top:20px;">
									By clicking on "Register" I agree to CodeZen <%= link_to 'Terms', terms_path %> and <%= link_to 'Privacy policy', privacy_path %>.
								</p>
				<% end %>

	</div> <!-- End cardbox-->			
					<div class="links text-center">
						<span style="color: #797979;">Already have an account?</span> <%= render "devise/shared/links" %>
					</div>
			</div>
		</div>
</div>