<% provide(:title, "Edit Profile") %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <h2 class="user_header page-header" style="margin-top: 0px;">Editing My Connection Information</h2>
    </div>
  </div>

  <%= render 'shared/personal_settings' %>

    <div class="col-md-5 col-md-offset-1">

    <h2 class="user_header" style="margin-bottom: 20px;">Profile settings 
       <span class="btn btn-default user_header">Connections</span>
    </h2>

      <%= form_for(current_user, url: users_connections_path , html: { method: :put }) do |ff| %>
      
        <%= render 'shared/error_messages', object: ff.object %>

        <div class="form-group">
          <%= ff.label :bio %>
          <%= ff.text_area :bio, class: "form-control", 
                                 placeholder: "Tell us some mouthwatering details about yourself in 250 characters. It may be helpful to include some things you have done previously.", maxlength: 250, rows: 4 
          %>
        </div>

        <%= ff.label :location%>
        <div class="form-inline">          
          <div class="form-group col-xs-6">
            <%= ff.text_field :city, class: "form-control", placeholder: "City" %>
          </div>

          <div class="col-xs-6">
            <%= ff.text_field :state, class: "form-control", placeholder: "State" %>
          </div>

          <div class="col-xs-4">
            <%= ff.text_field :country, class: "form-control", placeholder: "Country" %>
          </div>

        </div>

        <div class="clearfix"></div>
        
        <div class="breadcrumb" style="margin-top: 45px;">

          <%= ff.submit "Update connections", class: "btn btn-success" %> 
        
          <%= link_to 'Cancel', root_path, class: "btn btn-default btn_cancel" %>
          
        </div>

      <% end %>
  </div>
</div>


